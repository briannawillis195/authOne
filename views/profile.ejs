<!doctype html>
<html>
<head>
    <title>Personalized To-Do List</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Ubuntu&display=swap" rel="stylesheet">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
    <h1> To-Do List</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3> <%= `Hi ${user.local.email}!` %></h3>

                <% if (user.local.email) { %>
                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>password</strong>: <%= user.local.password %>
                    </p>

                    <a href="/unlink/local" class="btn btn-default">Unlink</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>

            </div>
        </div>

        
        <div class="col-sm-6">
          <ul class="messages">
          <% for(var i=0; i<messages.length; i++) {%>
            <li class="message">
              <span class='<%= messages[i].completed ? "crossOut" : ""%>'><%= messages[i].msg %></span>
              <span><i class="fa fa-check" aria-hidden="true" id="check"></i></span>
              <span><i class="fa fa-trash-o" aria-hidden="true" id="trash"></i></span>
            </li>
          <% } %>
          </ul>

        <% if (user.local.email) { %>
          <form action="/messages" method="POST">
            <input type="text" placeholder="What Do You Have To Get Done Today?" name="msg" class="submit">
            <button type="submit">Submit</button>
          </form>
        </div>
        <% } %>
</div>

<script src="main.js"></script>

</body>
</html>
